        <servlet-class>com.lanzdev.servlets.actions.update.UpdateArticle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>updateArticle</servlet-name>
        <url-pattern>/updateArticle</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>updateGenre</servlet-name>
        <servlet-class>com.lanzdev.servlets.actions.update.UpdateGenre</servlet-class>
