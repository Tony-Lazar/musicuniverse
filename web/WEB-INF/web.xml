<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">


    <!--MAIN PART-->


    <servlet>
        <servlet-name>openGenres</servlet-name>
        <servlet-class>com.lanzdev.servlets.redirect.main.OpenGenres</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>openGenres</servlet-name>
        <url-pattern>/genres</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>openSubgenres</servlet-name>
        <servlet-class>com.lanzdev.servlets.redirect.main.OpenSubgenres</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>openSubgenres</servlet-name>
        <url-pattern>/subgenres</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>openBands</servlet-name>
        <servlet-class>com.lanzdev.servlets.redirect.main.OpenBands</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>openBands</servlet-name>
        <url-pattern>/bands</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>openAlbums</servlet-name>
        <servlet-class>com.lanzdev.servlets.redirect.main.OpenAlbums</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>openAlbums</servlet-name>
        <url-pattern>/albums</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>openArticles</servlet-name>
        <servlet-class>com.lanzdev.servlets.redirect.main.OpenArticles</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>openArticles</servlet-name>
        <url-pattern>/articles</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>openArticle</servlet-name>
        <servlet-class>com.lanzdev.servlets.redirect.main.OpenArticle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>openArticle</servlet-name>
        <url-pattern>/article</url-pattern>
    </servlet-mapping>


    <!--ADMIN PART-->

    <servlet>
        <servlet-name>admin</servlet-name>
        <servlet-class>com.lanzdev.servlets.redirect.admin.Admin</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>admin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>openGenresPanel</servlet-name>
        <servlet-class>com.lanzdev.servlets.redirect.admin.main.GenresPanel</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>openGenresPanel</servlet-name>
        <url-pattern>/genresPanel</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>openSubgenresPanel</servlet-name>
        <servlet-class>com.lanzdev.servlets.redirect.admin.main.SubgenresPanel</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>openSubgenresPanel</servlet-name>
        <url-pattern>/subgenresPanel</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>openBandsPanel</servlet-name>
        <servlet-class>com.lanzdev.servlets.redirect.admin.main.BandsPanel</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>openBandsPanel</servlet-name>
        <url-pattern>/bandsPanel</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>openAlbumsPanel</servlet-name>
        <servlet-class>com.lanzdev.servlets.redirect.admin.main.AlbumsPanel</servlet-class>
    </servlet>

