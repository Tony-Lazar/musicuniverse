    </servlet>

    <servlet-mapping>
        <servlet-name>openArticlesPanel</servlet-name>
        <url-pattern>/articlesPanel</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>createArticle</servlet-name>
        <servlet-class>com.lanzdev.servlets.redirect.admin.creation.CreateArticle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>createArticle</servlet-name>
        <url-pattern>/createArticle</url-pattern>
    </servlet-mapping>

    <!--ACTIONS-->

    <!--ADDITION-->

    <servlet>
        <servlet-name>addArticle</servlet-name>
        <servlet-class>com.lanzdev.servlets.actions.addition.AddArticle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addArticle</servlet-name>
        <url-pattern>/addArticle</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>editArticle</servlet-name>
        <servlet-class>com.lanzdev.servlets.redirect.admin.editing.EditArticle</servlet-class>
    </servlet>

